<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/default_margin">

        <com.verygoodsecurity.vgsshow.widget.VGSTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/test_color"
            app:fieldName="card_data.cardNumber"
            app:text="all wrap_content" />

        <com.verygoodsecurity.vgsshow.widget.VGSTextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/test_color"
            app:fieldName="card_data.cardNumber"
            app:text="width specific" />

        <com.verygoodsecurity.vgsshow.widget.VGSTextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/test_color"
            app:fieldName="card_data.cardNumber"
            app:text="height specific" />

        <com.verygoodsecurity.vgsshow.widget.VGSTextView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/test_color"
            app:fieldName="card_data.cardNumber"
            app:text="all specific" />

        <com.verygoodsecurity.vgsshow.widget.VGSTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/test_color"
            app:fieldName="card_data.cardNumber"
            app:text="width match_parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="2dp"
            android:background="#2200ff00">
            <com.verygoodsecurity.vgsshow.widget.VGSTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/test_color"
                app:fieldName="card_data.cardNumber"
                app:text="all match_parent" />
        </FrameLayout>

    </LinearLayout>
</ScrollView>