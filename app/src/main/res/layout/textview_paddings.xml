<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/default_margin">

        <com.verygoodsecurity.vgsshow.widget.VGSTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/test_color"
            app:fieldName="card_data.cardNumber"
            app:text="no paddings" />


        <com.verygoodsecurity.vgsshow.widget.VGSTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/test_color"
            android:padding="@dimen/default_margin"
            app:fieldName="card_data.cardNumber"
            app:text="all padding" />

        <com.verygoodsecurity.vgsshow.widget.VGSTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/test_color"
            android:paddingTop="@dimen/default_margin"
            app:fieldName="card_data.cardNumber"
            app:text="top padding" />

        <com.verygoodsecurity.vgsshow.widget.VGSTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/test_color"
            android:paddingBottom="@dimen/default_margin"
            app:fieldName="card_data.cardNumber"
            app:text="bottom padding" />


        <com.verygoodsecurity.vgsshow.widget.VGSTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/test_color"
            android:paddingStart="@dimen/default_margin"
            app:fieldName="card_data.cardNumber"
            app:text="start padding" />


        <com.verygoodsecurity.vgsshow.widget.VGSTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/test_color"
            android:paddingLeft="@dimen/default_margin"
            app:fieldName="card_data.cardNumber"
            app:text="left padding" />


        <com.verygoodsecurity.vgsshow.widget.VGSTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/test_color"
            android:paddingEnd="@dimen/default_margin"
            app:fieldName="card_data.cardNumber"
            app:text="end padding" />

        <com.verygoodsecurity.vgsshow.widget.VGSTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/test_color"
            android:paddingRight="@dimen/default_margin"
            app:fieldName="card_data.cardNumber"
            app:text="right padding" />

        <com.verygoodsecurity.vgsshow.widget.VGSTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/test_color"
            android:paddingRight="@dimen/default_margin"
            app:fieldName="card_data.cardNumber"
            app:text="right padding" />

    </LinearLayout>
</ScrollView>